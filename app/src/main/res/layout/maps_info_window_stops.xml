<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:padding="8dp">

    <TextView
        android:id="@+id/maps_info_window_title"
        style="@style/TextAppearance.ListItemPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="26th St At Penn Ave Fs - Spring Way" />

    <TextView
        style="@style/TextAppearance.ListItemSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/action_tap_for_transit_info"
        app:layout_constraintTop_toBottomOf="@id/maps_info_window_title" />

</androidx.constraintlayout.widget.ConstraintLayout>